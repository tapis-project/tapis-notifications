{
  "$id": "https://tapis.tacc.utexas.edu/SubscriptionPostRequest",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "Schema for a request to create a subscription via POST",

  "type": "object",
  "required": [ "topicFilter", "deliveryMethods" ],
  "additionalProperties": false,
  "properties": {
    "id": { "type": ["string", "null"], "minLength": 1, "maxLength": 80 },
    "description": { "type": ["string", "null"], "maxLength": 2048 },
    "owner": { "$ref": "resource:///edu/utexas/tacc/tapis/notifications/api/jsonschema/Definitions.json#/UserName" },
    "enabled": { "type": "boolean", "default": true },
    "topicFilter": { "type": "string" },
    "subjectFilter": { "type": ["string", "null"] },
    "deliveryMethods": { "$ref": "resource:///edu/utexas/tacc/tapis/notifications/api/jsonschema/Definitions.json#/DeliveryMethodList" },
    "notes": { "type": "object" },
    "tenant": { "type":  "string" },
    "uuid": { "type":  "string" },
    "created": { "type":  "string" },
    "updated": { "type":  "string" }
  }
}
