{
  "$id": "https://tapis.tacc.utexas.edu/Definitions",
  "$schema": "https://json-schema.org/draft-07/schema#",
  "description": "Common definitions for requests",
  "additionalProperties": false,

  "UserName": { "type": "string", "minLength": 1, "maxLength": 60 },
  "DeliveryMethodEnum": { "type": "string", "enum": [ "WEBHOOK" ] },
  "DeliverMethodList": {
    "type": "array",
    "minItems": 1, "uniqueItems": true, "items": { "$ref": "#/DeliveryMethod" }
  },
  "DeliveryMethod": {
    "type": "object",
    "required": [ "deliveryMethod", "webhookURL" ],
    "additionalProperties": false,
    "properties": {
      "deliveryMethod": { "$ref": "#/DeliveryMethodEnum" },
      "webhookURL": { "type": "string" }
      }
  }
}